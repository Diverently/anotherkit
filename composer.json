{
    "name": "diverently/anotherkit",
    "description": "Another kirby project template",
    "type": "project",
    "keywords": ["kirby", "cms", "starterkit"],
    "license": "MIT",
    "authors": [
        {
            "name": "Robert Cordes",
            "email": "robert@diverently.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "getkirby/cms": "^3.9"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "getkirby/composer-installer": true
        }
    },
    "extra": {
        "kirby-cms-path": false,
        "kirby-plugin-path": "site/plugins"
    },
    "scripts": {
        "post-create-project-cmd": [
            "php ./configure.php"
        ]
    }
}
